{
  "name": "libzotero",
  "version": "0.2.0",
  "description": "javascript libZotero",
  "main": "lib/libzotero.js",
  "keywords": [
    "Zotero"
  ],
  "author": "Faolan C-P",
  "license": "AGPL-3.0",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "watchify": "NODE_ENV=production watchify -s libzotero src/libzotero.js -d -v -t [babelify] -p mapstraction -g [ envify --NODE_ENV production ] -o build/libzotero.js",
    "flow": "./node_modules/.bin/flow; test $? -eq 0 -o $? -eq 2",
    "test": "nyc --require @babel/register mocha ./test/*.spec.js",
    "coverage": "nyc --reporter=html --reporter=text mocha --require babel-core/register",
    "test-watch": "mocha -w --require babel-core/register",
    "prepack": "npm run build",
    "postpack": "rimraf lib && rimraf build",
    "clean": "rimraf build",
    "build": "rimraf lib/* && rimraf build/* && run-p browserify build:node",
    "build:node": "mkdir -p lib/ && cd src && babel *.js -d ../lib",
    "browserify": "mkdir -p build/ && NODE_ENV=production browserify -s libzotero -d src/libzotero.js -v -t [babelify] -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle > build/libzotero.js",
    "start": "mocha -w --require babel-core/register"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "envify": "^4.1.0",
    "fetch-mock": "^7.0.7",
    "flow-bin": "^0.23.1",
    "istanbul": "^0.4.5",
    "mapstraction": "^1.0.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.9",
    "uglifyify": "^5.0.1",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "cross-fetch": "^2.2.2",
    "spark-md5": "^3.0.0",
    "striptags": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fcheslack/libZoteroJS"
  }
}
